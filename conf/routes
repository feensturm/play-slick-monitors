# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                              controllers.Application.index()
GET         /server                                        controllers.Application.server()
GET         /client                                        controllers.Application.client()
GET         /article/delete/:name                          controllers.Application.deleteArticle(name: String)
GET         /article/activate/:name                        controllers.Application.activateArticle(name: String)
GET         /webSocket                                     controllers.WebSockets.socket()
GET         /serverWebSocket                               controllers.ServerWebSockets.socket()
GET         /famousServerWebSocket                         controllers.ServerWebSockets.famousSocket()
GET         /webSocket/:order                              controllers.WebSockets.orderredSocket(order: Int)
GET         /webSocket/:order/:playlist                    controllers.WebSockets.orderredPlaySocket(order: Int, playlist: String)
GET         /webSocket/:clientUUID/:order/:playlist        controllers.WebSockets.clientOrderredPlaySocket(clientUUID: String, order: Int, playlist: String)

# famo.us
GET         /famous                                        controllers.FamousApp.index()
GET         /famous/:order                                 controllers.FamousApp.display(order: Int)
GET         /famous/:playlist/:order                       controllers.FamousApp.displayPlaylist(order: Int, playlist: String)
GET         /famous/:clientUUID/:playlist/:order           controllers.FamousApp.displayClientPlaylist(clientUUID: String, order: Int, playlist: String)
GET         /famousserver                                  controllers.FamousApp.server()
# WebSocket test
GET         /echo                                          controllers.EchoWebSockets.index()
GET         /echoWebSocket                                 controllers.EchoWebSockets.echo()

# Home page
POST        /insertArticle                                 controllers.Application.insertArticle

GET         /articles/all                                  controllers.Application.jsonFindAllArticles
GET         /clients/all                                   controllers.Application.jsonFindAllClients

# Home page
POST        /json/insert                                   controllers.Application.jsonInsert

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                  controllers.Assets.at(path="/public", file)

